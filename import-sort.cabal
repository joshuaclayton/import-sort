name:                import-sort
version:             0.0.1.0
synopsis:            Sort imports in Haskell
description:         Please see README.md
homepage:            https://github.com/joshuaclayton/import-sort#readme
license:             MIT
license-file:        LICENSE
author:              Josh Clayton
maintainer:          sayhi@joshuaclayton.me
copyright:           2016
category:            Development
build-type:          Simple
-- extra-source-files:
cabal-version:       >=1.10

library
  hs-source-dirs:      src
  exposed-modules:     ImportSort.Sort
                     , ImportSort.Types
                     , ImportSort.Parser
  build-depends:       base >= 4.7 && < 5
                     , attoparsec
                     , text
  default-language:    Haskell2010

executable import-sort
  hs-source-dirs:      app
  main-is:             Main.hs
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  build-depends:       base
                     , import-sort
  default-language:    Haskell2010

test-suite import-sort-test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Spec.hs
  build-depends:       base
                     , import-sort
                     , hspec
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  other-modules:       ImportSort.SortSpec
  default-language:    Haskell2010

source-repository head
  type:     git
  location: https://github.com/joshuaclayton/import-sort
